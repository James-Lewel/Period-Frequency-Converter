<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.periodfrequencyconverter.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label prefHeight="18.0" prefWidth="500.0" text="Period Frequency Converter" />
      <Separator prefWidth="200.0" />
      <SplitPane dividerPositions="0.5" prefHeight="350.0" prefWidth="460.0">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <Label layoutX="14.0" layoutY="14.0" prefHeight="18.0" prefWidth="200.0" text="Seconds" />
                  <TextField fx:id="secondsInput" layoutX="13.0" layoutY="42.0" onKeyReleased="#secondsInputOnKeyReleased" prefHeight="26.0" prefWidth="200.0" />
                  <Label layoutX="14.0" layoutY="78.0" prefHeight="18.0" prefWidth="200.0" text="Milliseconds" />
                  <TextField fx:id="millisecondsInput" layoutX="14.0" layoutY="106.0" onKeyReleased="#millisecondsInputOnKeyReleased" prefHeight="26.0" prefWidth="200.0" />
                  <Label layoutX="14.0" layoutY="142.0" prefHeight="18.0" prefWidth="200.0" text="Microseconds" />
                  <TextField fx:id="microsecondsInput" layoutX="14.0" layoutY="171.0" onKeyReleased="#microsecondsInputOnKeyReleased" prefHeight="26.0" prefWidth="200.0" />
                  <Label layoutX="14.0" layoutY="207.0" prefHeight="18.0" prefWidth="200.0" text="Nanoseconds" />
                  <TextField fx:id="nanosecondsInput" layoutX="14.0" layoutY="235.0" onKeyReleased="#nanosecondsInputOnKeyReleased" prefHeight="26.0" prefWidth="200.0" />
                  <Label layoutX="14.0" layoutY="271.0" prefHeight="18.0" prefWidth="200.0" text="Picoseconds" />
                  <TextField fx:id="picosecondsInput" layoutX="14.0" layoutY="299.0" onKeyReleased="#picosecondsInputOnKeyReleased" prefHeight="26.0" prefWidth="200.0" />
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <Label layoutX="14.0" layoutY="14.0" prefHeight="18.0" prefWidth="200.0" text="Hertz" />
                  <TextField fx:id="hertzInput" layoutX="14.0" layoutY="42.0" onKeyReleased="#hertzInputOnKeyReleased" prefHeight="26.0" prefWidth="200.0" />
                  <Label layoutX="14.0" layoutY="78.0" prefHeight="18.0" prefWidth="200.0" text="Kilohertz" />
                  <TextField fx:id="kilohertzInput" layoutX="14.0" layoutY="106.0" onKeyReleased="#kilohertzInputOnKeyReleased" prefHeight="26.0" prefWidth="200.0" />
                  <Label layoutX="14.0" layoutY="142.0" prefHeight="18.0" prefWidth="200.0" text="Megahertz" />
                  <TextField fx:id="megahertzInput" layoutX="14.0" layoutY="171.0" onKeyReleased="#megahertzInputOnKeyReleased" prefHeight="26.0" prefWidth="200.0" />
                  <Label layoutX="14.0" layoutY="207.0" prefHeight="18.0" prefWidth="200.0" text="Gigahertz" />
                  <TextField fx:id="gigahertzInput" layoutX="14.0" layoutY="235.0" onKeyReleased="#gigahertzInputOnKeyReleased" prefHeight="26.0" prefWidth="200.0" />
                  <Label layoutX="14.0" layoutY="271.0" text="Terahertz" />
                  <TextField fx:id="terahertzInput" layoutX="13.0" layoutY="299.0" onKeyReleased="#terahertzInputOnKeyReleased" prefHeight="26.0" prefWidth="200.0" />
               </children></AnchorPane>
        </items>
      </SplitPane>
   </children>
</VBox>
